work_hours=[("Tim",40),("John",70),("Henry",20)]

def employee_check(work_hours):

	current_max=0
	employee_of_month=""

	for employee,hours in work_hours:
		if hours>current_max:
			current_max=hours
			employee_of_month=employee
		else:
			pass




	return(employee_of_month,current_max)

name,hours=employee_check(work_hours)

print(f'Congrats {name}. You have been elected as the employee of the month for working {hours} hours')
